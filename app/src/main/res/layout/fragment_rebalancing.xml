<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bgimg"
    tools:context=".fragment.RebalancingFragment">
    <RelativeLayout
        android:id="@+id/layoutSendMoney"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_height="@dimen/_40sdp">
            <LinearLayout
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:padding="@dimen/_5sdp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/backicon"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#EEEEEE"
                android:textSize="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/satoshi_bold"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:text="Rebalancing"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/bottom_layout"
            android:layout_below="@id/title"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:visibility="gone"
                android:layout_margin="@dimen/_20sdp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/layDeposit"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:background="@drawable/button_custom"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imgAdd"
                        android:layout_width="wrap_content"
                        android:src="@drawable/addicon"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvDeposit"
                        android:layout_width="wrap_content"
                        android:text="Deposit"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/satoshi_bold"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layWithdrawal"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:padding="@dimen/_15sdp"
                    android:background="@drawable/bg_withdrawal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imgMinus"
                        android:layout_width="wrap_content"
                        android:src="@drawable/minusicon"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvWithdrawal"
                        android:layout_width="wrap_content"
                        android:text="Withdrawal"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="#E2692B"
                        android:fontFamily="@font/satoshi_bold"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/layCountry"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    tools:ignore="UseCompoundDrawables">
                    <ImageView
                        android:id="@+id/imgIcon"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/countryicon"
                        android:layout_height="@dimen/_15sdp"/>
                    <TextView
                        android:id="@+id/tvCountryCode"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:drawablePadding="@dimen/_8sdp"
                        android:text="@string/_221"
                        android:fontFamily="@font/satoshi_bold"
                        android:textColor="#696969"
                        app:drawableEndCompat="@drawable/icondown" />
                </LinearLayout>
                <AutoCompleteTextView
                    android:id="@+id/edSearchAuto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_a_new_phone_number"
                    android:inputType="phone"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:textSize="@dimen/_13sdp"
                    android:textColorHint="#696969"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:fontFamily="@font/satoshi_medium"
                    android:padding="@dimen/_10sdp"
                    android:background="@null"
                    />
            </LinearLayout>
            <View
                android:id="@+id/layEdit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="#696969"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#0F0D1C"
                    android:textSize="@dimen/_13sdp"
                    android:gravity="center|start"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/satoshi_medium"
                    android:layout_gravity="center"
                    android:text="@string/amount_deposit"
                    tools:ignore="RelativeOverlap" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp">
                    <EditText
                        android:id="@+id/edAmount"
                        android:layout_width="match_parent"
                        android:background="@null"
                        android:hint="0"
                        android:singleLine="true"
                        android:inputType="number"
                        android:fontFamily="@font/satoshi_medium"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:textColor="#696969"
                        android:textColorHint="#696969"
                        android:layout_height="match_parent"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="#696969"
                    android:layout_height="@dimen/_1sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#0F0D1C"
                    android:textSize="@dimen/_13sdp"
                    android:gravity="center|start"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/satoshi_medium"
                    android:layout_gravity="center"
                    android:text="@string/confirm_the_amount"
                    tools:ignore="RelativeOverlap" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp">
                    <EditText
                        android:id="@+id/edCnfAmount"
                        android:layout_width="match_parent"
                        android:background="@null"
                        android:hint="0"
                        android:singleLine="true"
                        android:inputType="number"
                        android:fontFamily="@font/satoshi_medium"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:textColor="#696969"
                        android:textColorHint="#696969"
                        android:layout_height="match_parent"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="#696969"
                    android:layout_height="@dimen/_1sdp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layDone"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:background="@drawable/button_custom">
            <TextView
                android:id="@+id/tvSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_13sdp"
                android:gravity="center"
                android:text="@string/deposit"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/satoshi_bold"
                android:layout_gravity="center"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layout_secret_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_20sdp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_30sdp"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables,UselessParent">
        <ImageView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="center"
            android:contentDescription="@string/todo"
            android:layout_marginBottom="@dimen/_10sdp"
            android:src="@drawable/agentlogo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#EEEEEE"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/satoshi_bold"
            android:layout_gravity="center"
            android:text="@string/enter_your_secret_code"/>
        <LinearLayout
            android:id="@+id/otp_enter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginVertical="@dimen/_20sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:elevation="4dp"

            android:orientation="horizontal"
            android:weightSum="4">
            <EditText
                android:id="@+id/etOtp1"
                style="@style/OtpDigitStyleSecret"
                android:hint="-"
                android:inputType="numberPassword"

                android:layout_marginHorizontal="@dimen/_8sdp"
                android:textColorHint="#FFFFFF"/>

            <EditText
                android:id="@+id/etOtp2"
                style="@style/OtpDigitStyleSecret"
                android:hint="-"
                android:inputType="numberPassword"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:textColorHint="#FFFFFF"/>

            <EditText
                android:id="@+id/etOtp3"
                style="@style/OtpDigitStyleSecret"
                android:hint="-"
                android:inputType="numberPassword"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:textColorHint="#FFFFFF"/>

            <EditText
                android:id="@+id/etOtp4"
                style="@style/OtpDigitStyleSecret"
                android:hint="-"
                android:inputType="numberPassword"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:textColorHint="#FFFFFF"/>
        </LinearLayout>

        <TextView
            android:id="@+id/btnForgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#EEEEEE"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/satoshi_bold"
            android:layout_gravity="center"
            android:text="Forgot Your Code?"/>

    </LinearLayout>
</RelativeLayout>