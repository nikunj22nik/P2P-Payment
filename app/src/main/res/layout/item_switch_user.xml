<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/layActive"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layManagement"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center"
            android:background="@drawable/button_custom">
            <TextView
                android:id="@+id/tvShortName"
                android:layout_width="wrap_content"
                android:text="XY"
                android:textSize="@dimen/_15sdp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/satoshi_bold"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/layswitchmagent"
            android:layout_toEndOf="@id/layManagement">
            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#0F0D1C"
                android:textSize="@dimen/_13sdp"
                android:fontFamily="@font/satoshi_medium"
                android:layout_gravity="center"
                android:text="@string/beryl_orou" />
            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#949494"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/satoshi_bold"
                android:layout_gravity="center"
                android:text="@string/_01_33_23_43_44" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layswitchmagent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true">
            <LinearLayout
                android:layout_width="@dimen/_75sdp"
                android:background="@drawable/button_custom"
                android:gravity="center"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvRole"
                    android:layout_width="wrap_content"
                    android:text="@string/master_agent"
                    android:textSize="@dimen/_8sdp"
                    android:paddingVertical="@dimen/_6sdp"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/satoshi_bold"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/imgActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/todo"
                android:src="@drawable/circleunselect"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layInActive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="#CCCCCC"
            android:layout_height="@dimen/_1sdp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#0F0D1C"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/satoshi_medium"
                    android:layout_gravity="center"
                    android:text="@string/ready_to_grow_your_business_reach_with_a" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvRoleTYpe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#B13A7E"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/satoshi_bold"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:text="@string/merchant" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#0F0D1C"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/satoshi_medium"
                        android:layout_gravity="center"
                        android:text="@string/accountswitch" />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:contentDescription="@string/todo"
                android:src="@drawable/user_plus"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>