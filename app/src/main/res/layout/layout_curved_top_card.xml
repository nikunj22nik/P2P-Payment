<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/card_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <FrameLayout
            android:id="@+id/icon_frame"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-35dp"
            android:background="@drawable/bg_icon_ring"
            android:padding="8dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_gift_box"
                app:tint="@color/icon_ring_end"
                android:contentDescription="Gift Icon" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon_frame"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="Invite Friends"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/dark_text" />

        <TextView
            android:id="@+id/tv_action_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_action_button"
            android:paddingVertical="16dp"
            android:paddingHorizontal="20dp"
            android:gravity="center"
            android:text="Invite friends to Many Mobile Money and"
            android:textSize="16sp"
            android:textColor="@color/dark_text"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>