<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="@drawable/bgimg"
tools:context=".fragment.SecretCodeFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    tools:ignore="UseCompoundDrawables,UselessParent">
    <ImageView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_gravity="center"
        android:contentDescription="@string/todo"
        android:layout_marginBottom="@dimen/_10sdp"
        android:src="@drawable/agentlogo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#EEEEEE"
        android:textSize="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="@font/satoshi_bold"
        android:layout_gravity="center"
        android:text="@string/secret_code"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#EEEEEE"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:fontFamily="@font/satoshi_bold"
        android:layout_gravity="center"
        android:text="Enter new secret code"/>

    <LinearLayout
        android:id="@+id/otp_enter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginVertical="@dimen/_15sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:background="@drawable/edit_custom"
        android:elevation="@dimen/_4sdp"
        android:orientation="horizontal"
        android:weightSum="4">
        <EditText
            android:id="@+id/etOtp1"
            style="@style/OtpDigitStyle"
            android:hint="*"
            android:inputType="numberPassword"
            android:textColorHint="#333333"/>
        <View style="@style/OtpDividerStyle" />
        <EditText
            android:id="@+id/etOtp2"
            style="@style/OtpDigitStyle"
            android:hint="*"
            android:inputType="numberPassword"
            android:textColorHint="#333333"/>
        <View style="@style/OtpDividerStyle" />
        <EditText
            android:id="@+id/etOtp3"
            style="@style/OtpDigitStyle"
            android:hint="*"
            android:inputType="numberPassword"
            android:textColorHint="#333333" />
        <View style="@style/OtpDividerStyle" />
        <EditText
            android:id="@+id/etOtp4"
            style="@style/OtpDigitStyle"
            android:hint="*"
            android:inputType="numberPassword"
            android:textColorHint="#333333"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#EEEEEE"
        android:textSize="@dimen/_12sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:fontFamily="@font/satoshi_bold"
        android:layout_gravity="center"
        android:text="Re-enter secret code"/>

    <LinearLayout
        android:id="@+id/otp_enter1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginVertical="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:background="@drawable/edit_custom"
        android:elevation="@dimen/_4sdp"
        android:orientation="horizontal"
        android:weightSum="4">
        <EditText
            android:id="@+id/etOtp11"
            style="@style/OtpDigitStyle"
            android:hint="*"
            android:inputType="numberPassword"
            android:textColorHint="#333333"/>
        <View style="@style/OtpDividerStyle" />
        <EditText
            android:id="@+id/etOtp22"
            style="@style/OtpDigitStyle"
            android:hint="*"
            android:inputType="numberPassword"
            android:textColorHint="#333333"/>
        <View style="@style/OtpDividerStyle" />
        <EditText
            android:id="@+id/etOtp33"
            style="@style/OtpDigitStyle"
            android:hint="*"
            android:inputType="numberPassword"
            android:textColorHint="#333333" />
        <View style="@style/OtpDividerStyle" />
        <EditText
            android:id="@+id/etOtp44"
            style="@style/OtpDigitStyle"
            android:hint="*"
            android:inputType="numberPassword"
            android:textColorHint="#333333"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btnOkay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:background="@drawable/button_custom">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_13sdp"
            android:text="@string/set_your_secret_code"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/satoshi_bold"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>
</RelativeLayout>