<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bgimg"
    tools:context=".fragment.NewNumberFragment">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_height="@dimen/_40sdp">
        <LinearLayout
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:padding="@dimen/_5sdp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/backicon"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#EEEEEE"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/satoshi_bold"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:text="New Number"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layScan"
        android:layout_width="match_parent"
        android:layout_below="@id/title"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_toLeftOf="@id/imgScan"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#EEEEEE"
                android:textSize="@dimen/_13sdp"
                android:fontFamily="@font/satoshi_bold"
                android:layout_gravity="center"
                android:text="Your Balance"/>

            <TextView
                android:id="@+id/tvBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#EEEEEE"
                android:textSize="@dimen/_20sdp"
                android:fontFamily="@font/satoshi_bold"
                android:layout_gravity="center"
                android:text="0"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/imgScan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:src="@drawable/scannicon"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/bottom_layout"
        android:layout_below="@id/layScan"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/layCountry"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:id="@+id/imgIcon"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:src="@drawable/countryicon"
                    android:layout_height="@dimen/_15sdp"/>
                <TextView
                    android:id="@+id/tvCountryCode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:drawablePadding="@dimen/_8sdp"
                    android:text="@string/_221"
                    android:fontFamily="@font/satoshi_bold"
                    android:textColor="#696969"
                    app:drawableEndCompat="@drawable/icondown" />
            </LinearLayout>
            <EditText
                android:id="@+id/edUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/_13sdp"
                android:hint="Phone numbers"
                android:background="@null"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="#696969"
                android:textColorHint="#696969"
                android:paddingHorizontal="@dimen/_5sdp"
                android:fontFamily="@font/satoshi_medium"
                android:layout_gravity="center"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"

            android:background="#696969"
            android:layout_marginHorizontal="@dimen/_15sdp"/>

        <LinearLayout
            android:id="@+id/layRecentPeople"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/satoshi_bold"
                android:textColor="#121212"
                android:textSize="@dimen/_15sdp"
                android:text="People"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcyPeople"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layTransaction"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/refreshicon"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/satoshi_bold"
                android:textColor="#121212"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:textSize="@dimen/_15sdp"
                android:drawableEnd="@drawable/rightarrowicon"
                android:text="See transaction history"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>