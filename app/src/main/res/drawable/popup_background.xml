<?xml version="1.0" encoding="utf-8"?>

<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@android:color/white"/>

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#C0C0C0" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Optional padding -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />

</shape>
